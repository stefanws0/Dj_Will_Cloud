<!doctype html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>
<% include ../partials/nav %>
<div class="container-fluid">
  <div class="row">
    <% include ../partials/dashboard.nav.ejs %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
      </div>

      <h2>Products</h2>
      <div class="table-responsive">
        <table id="test" class="table table-striped table-sm">
          <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Buttons</th>
          </tr>
          </thead>
          <tbody>
          <% for(var i = 0; i < products.length; i++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= products[i].title %></td>
            <td><%= products[i].description %></td>
            <td><%= products[i].price %></td>
            <td>
              <a class="edit" id="edit" href="/dashboard/products/<%= products[i]._id %>">
                <span data-feather="edit-3"></span>
              </a>
              <a class="delete" id="delete" data-toggle="modal" data-target="#deleteModal"
                 data-id="<%= products[i]._id %>" data-title="<%= products[i].title %>">
                <span data-feather="trash-2"></span>
              </a>
            </td>
          </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="deleteModalDescription">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="deleteModalDeleteButton" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>

</body>
</html>
