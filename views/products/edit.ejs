<!doctype html>
<html lang="en">
<head>
  <% include ../partials/head %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

  <script type="text/javascript">


    $(document).ready(function() {
      $('#editForm').on('submit', function(event){
        event.preventDefault(); //Stop default form submission
        // let formData = new FormData(currentForm);

        $.ajax({
          url: '/dashboard/products',    //Your api url
          type: 'PUT',   //type is any HTTP method,
          dataType: "json",
          data: $(this).serialize()
        })
        ;

      });
    });
  </script>
</head>
<body>
<% include ../partials/nav %>
<div class="container-fluid">
  <div class="row">
    <% include ../partials/dashboard.nav.ejs %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h3><a href="/dashboard/products">products </a>> <%= product.title %></h3>
      </div>
      <br>
      <form id="editForm">
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputTitle">Title</label>
            <input name="title" type="text" class="form-control" value="<%= product.title %>" id="inputTitle" placeholder="Title">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="Description">Description</label>
            <textarea name="description" class="form-control" id="Description" rows="3"><%= product.description %></textarea>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputPrice">Price</label>
            <input name="price" type="number" class="form-control" value="<%= product.price %>" id="inputPrice" placeholder="Price">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputBrand">Brand</label>
            <select name="brand" id="inputBrand" class="form-control">
              <option selected>Choose...</option>
              <option>Gucci</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputType">Type</label>
            <select name="type" id="inputType" class="form-control">
              <option selected>Choose...</option>
              <option>Shoe</option>
            </select>
          </div>
        </div>
        <button id="submit" type="submit" class="btn btn-primary">Edit</button>
      </form>
    </main>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="deleteModalDescription">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="deleteModalDeleteButton" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>

</body>
</html>
